<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".viewPrincipal">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50">

    <TextView
        android:id="@+id/couponTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descuento Especial"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/couponDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Aprovecha este cupón para obtener un 20% de descuento en tu próxima compra! Válido hasta el 31 de diciembre."
        android:layout_below="@id/couponTitle"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/redeemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canjear Cupón"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/couponDescription"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/expiresText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Válido hasta: 31/12/2023"
        android:textSize="12sp"
        android:layout_below="@id/redeemButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/couponImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cupon"
        android:scaleType="centerCrop"
        android:layout_below="@id/expiresText"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/additionalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Más información sobre el cupón..."
        android:layout_below="@id/couponImage"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/extraInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Este cupón es válido únicamente para compras en línea. No aplica con otras promociones.  "
        android:layout_below="@id/additionalInfo"
        android:padding="26dp"/>


</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>